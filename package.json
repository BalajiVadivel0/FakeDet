{
  "name": "deepfake-video-detector",
  "version": "1.0.0",
  "description": "Real-Time Deepfake Video Detection System",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"npm run dev:ai-service\" \"npm run dev:forensic-engine\"",
    "dev:frontend": "cd packages/frontend && npm run dev",
    "dev:backend": "cd packages/backend && npm run dev",
    "dev:ai-service": "cd packages/ai-service && python app.py",
    "dev:forensic-engine": "cd packages/forensic-engine && npm run dev",
    "build": "npm run build:shared && npm run build:frontend && npm run build:backend && npm run build:forensic-engine",
    "build:shared": "cd packages/shared && npm run build",
    "build:frontend": "cd packages/frontend && npm run build",
    "build:backend": "cd packages/backend && npm run build",
    "build:forensic-engine": "cd packages/forensic-engine && npm run build",
    "test": "npm run test:shared && npm run test:frontend && npm run test:backend && npm run test:forensic-engine",
    "test:shared": "cd packages/shared && npm test",
    "test:frontend": "cd packages/frontend && npm test",
    "test:backend": "cd packages/backend && npm test",
    "test:forensic-engine": "cd packages/forensic-engine && npm test",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "setup": "node scripts/setup-dev.js",
    "clean": "npm run clean:shared && npm run clean:frontend && npm run clean:backend && npm run clean:forensic-engine",
    "clean:shared": "cd packages/shared && rm -rf dist node_modules",
    "clean:frontend": "cd packages/frontend && rm -rf dist node_modules",
    "clean:backend": "cd packages/backend && rm -rf dist node_modules",
    "clean:forensic-engine": "cd packages/forensic-engine && rm -rf dist node_modules",
    "install:all": "npm install && npm run install:packages",
    "install:packages": "cd packages/shared && npm install && cd ../frontend && npm install && cd ../backend && npm install && cd ../forensic-engine && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3"
  }
}